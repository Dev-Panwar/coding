#include<bits/stdc++.h>
using namespace std;

int main(){
  int t;
  cin>>t;
  while(t--){
      int n,f=1;
      cin>>n;
      string a,b;
      cin>>a>>b;
       for(int i=1;i<n-1;++i){
         if(a[i]=='1'&&b[i]=='1'){
             cout<<"NO\n";f=0;break;
         }
      }
      
      if(f){
          cout<<"YES\n";
      }
      
    }return 0;
}
